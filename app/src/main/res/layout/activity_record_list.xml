<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tv_background2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="@mipmap/left_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="@string/storage_device"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/line" />

        <com.konkawise.dtv.view.TVListView
            android:id="@+id/lv_deivce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fadeScrollbars="false"
            android:focusable="false"
            android:listSelector="@drawable/dvb_btn_selector"
            android:scrollbarThumbVertical="@mipmap/scroller_bg"
            android:scrollbarTrackVertical="@mipmap/left_scroll_background"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="@string/record_list"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/line" />

        <com.konkawise.dtv.view.TVListView
            android:id="@+id/lv_record_channel_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="false"
            android:listSelector="@drawable/dvb_btn_selector" />

        <include
            android:id="@+id/ll_bottom_bar_record"
            layout="@layout/include_bottom_bar_edit" />
    </LinearLayout>
</LinearLayout>