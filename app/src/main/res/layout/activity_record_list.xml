<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tv_background2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_device_list"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="@mipmap/left_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="@string/storage_device"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/line" />

        <TextView
            android:id="@+id/tv_second_storage_device"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/dvb_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="USB(A:)" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@mipmap/channel_edit_gray_line" />

        <TextView
            android:id="@+id/tv_third_storage_device"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/dvb_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="USB(B:)" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@mipmap/channel_edit_gray_line" />

        <TextView
            android:id="@+id/tv_first_storage_device"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/dvb_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="USB(C:)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="@string/record_list"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/line" />

        <ListView
            android:id="@+id/lv_record_channel_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="@drawable/dvb_btn_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@mipmap/tv_and_radio_bg"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/channel_edit_gray_bg"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/play"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_10"
                    android:background="@mipmap/btn_red"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/select"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_10"
                    android:background="@mipmap/btn_green"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/rename"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_10"
                    android:background="@mipmap/channel_edite_blue_bg"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_channel_more_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_10"
                    android:background="@mipmap/btn_yellow"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/lock"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>