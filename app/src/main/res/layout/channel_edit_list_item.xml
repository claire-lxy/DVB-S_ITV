<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/dvb_btn_selector"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_channel_num"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/channel_dollars"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:src="@mipmap/channel_edit_dollars"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_program_nanme"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_channel_edit_gou"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:src="@mipmap/channel_mannanger_gou"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_channel_edit_delete"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:src="@mipmap/channel_edit_delete"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_channel_edit_fav"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:src="@mipmap/channel_edit_fav"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_channel_edit_lock"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:src="@mipmap/channel_edit_lock"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_channel_edit_skip"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:src="@mipmap/channel_edit_skip"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>