<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/dialog_line"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/item_audio_track"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/dvb_btn_fragment_selector"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/audio_track"
            android:textSize="@dimen/sp_10"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_audio_track_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/triangle_left"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_audio_track"
                android:layout_width="@dimen/dp_100"
                android:layout_height="22dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/btn_red_bg_shape"
                android:gravity="center"
                android:text="@string/audio_track_stereo"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/iv_audio_track_right"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/triangle_right"
                android:visibility="visible"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_audio_language"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dvb_btn_fragment_selector"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/audio_language"
            android:textSize="@dimen/sp_10"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_audio_language_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/triangle_left"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_audio_language"
                android:layout_width="@dimen/dp_100"
                android:layout_height="22dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/iv_audio_language_right"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/triangle_right"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>