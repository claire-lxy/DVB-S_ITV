        <!-- date -->
        <LinearLayout
            android:id="@+id/ll_book_date_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_book_date_year"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:maxLength="4"
                android:nextFocusRight="@+id/et_book_date_month"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="2019" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/book_date_segment" />

            <EditText
                android:id="@+id/et_book_date_month"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_date_day"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/book_date_segment" />

            <EditText
                android:id="@+id/et_book_date_day"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="date"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_date_year"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="13" />
        </LinearLayout>
    </LinearLayout>

    <!-- Start Time -->
    <LinearLayout
        android:id="@+id/item_book_start_time"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/book_start_time" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_book_start_time_hour"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_start_time_minute"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="14:20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/book_time_segment" />

            <EditText
                android:id="@+id/et_book_start_time_minute"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_start_time_hour"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="14:20" />
        </LinearLayout>
    </LinearLayout>

    <!-- End Time -->
    <LinearLayout
        android:id="@+id/item_book_end_time"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/book_end_time" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_book_end_time_hour"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_end_time_minute"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="14:20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/book_time_segment" />

            <EditText
                android:id="@+id/et_book_end_time_minute"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="0123456789"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusRight="@+id/et_book_end_time_hour"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:ignore="Autofill,LabelFor"
                tools:text="14:20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dvb_delete_btn_selector"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:text="@string/ok"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_cancel_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/dvb_delete_btn_selector"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:text="@string/cancel"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>