            <!--<ImageView-->
                <!--android:id="@+id/iv_book_date_monthly_right"-->
                <!--android:layout_width="@dimen/dp_8"-->
                <!--android:layout_height="@dimen/dp_8"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
