<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.konkawise.dtv">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".KonkaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".ui.CManualSearchActivity"></activity>
        <activity android:name=".ui.InstallationCActivity" />
        <activity
            android:name=".ui.Topmost"
            android:configChanges="keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SatelliteActivity" />
        <activity android:name=".ui.MotorActivity" />
        <activity android:name=".ui.TpBlindActivity" />
        <activity
            android:name=".ui.TpListingActivity"
            android:configChanges="keyboardHidden" />
        <activity android:name=".ui.EditManualActivity" />
        <activity android:name=".ui.ScanTVandRadioActivity" />
        <activity android:name=".ui.FavoriteActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.favorite" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.BookListActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.booklist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".receiver.UsbReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_MOUNTED" />
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.BookCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.GeneralSettingsActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.generalsettings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ParentalControlActivity" />
        <activity android:name=".ui.EpgActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.epg" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ChannelEditActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.channeledit" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.InstallationT2Activity" />
        <activity android:name=".ui.T2ManualSearchActivity" />
        <activity android:name=".ui.PVRSettingActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.pvrsetting" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RecordListActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.recordlist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecordPlayer"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".ui.T2SettingsActivity">
            <intent-filter>
                <action android:name="com.konkawise.dtv.ui.t2settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name=".utils.ChannelLockProvider"
            android:authorities="dvbchannellock"
            android:exported="true" />

        <service
            android:name=".service.BookService"
            android:exported="true" />
        <service android:name=".service.PowerService" />
        <service android:name=".service.RefreshChannelService" />
    </application>

</manifest>